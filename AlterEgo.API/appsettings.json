{
  "AllowedHosts": "*",
  "EnitityFrameworkSettings": {
    "InMemory": true,
    "ConnectionString": ""
  },
  "AnimationProcessing": {
    "Animator": "FakeAnimator",
    "FakeAnimator": {
      "MinProcessingTime": 2,
      "MaxProcessingTime": 15,
      "ShouldCopyVideo": true,
      "VideosDirectory": "files/videos",
      "OutputDirectory": "files/output"
    },
    "CoreAnimator": {
      "IsUsingDocker": true,
      "ExecPath": "docker",
      "DockerImage": "kamilmielnik/alterego-core:2.0.4",
      "PythonStartingPoint": "",
      "ImagesDirectory": "files/images",
      "VideosDirectory": "files/videos",
      "TempDirectory": "files/temp",
      "OutputDirectory": "files/output",

      "UsingGPU": false
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.EntityFrameworkCore.ChangeTracking": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:53411" }
      },
      {
        "Name": "File",
        "Args": {"path": "logs/log.txt", "rollingInterval": "Day"}
      }
    ]
  }
}
