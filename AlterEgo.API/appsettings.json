{
  "AllowedHosts": "*",
  "EnitityFrameworkSettings": {
    "InMemory": false,
    "ConnectionString": "Server=db;Database=alterego;User=sa;Password=Password1"
  },
  "FilesLocationSettings": {
    "ImagesDirectory": "files/images",
    "VideosDirectory": "files/videos",
    "TempDirectory": "files/temp",
    "OutputDirectory": "files/output"
  },
  "AnimationProcessing": {
    "Animator": "FakeAnimator",
    "FakeAnimator": {
      "MinProcessingTime": 2,
      "MaxProcessingTime": 15,
      "ShouldCopyVideo": true
    },
    "CoreAnimator": {
      "IsUsingDocker": true,
      "ExecPath": "docker",
      "DockerImage": "kamilmielnik/alterego-core:2.0.4",
      "PythonStartingPoint": "",
      "UsingGPU": false
    }
  },
  "FFmpegSettings": {
    "FFmpegLocation": "C:\\ffmpeg\\ffmpeg.exe"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.EntityFrameworkCore.ChangeTracking": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "JWT": {
    "SecretKey": "secretsecretsecretsecretsecretsecret",
    "Issuer": "localhost",
    "Audience": "localhost",
    "ExpiresAfter": 300000
  }
}
